#diasem="$(sh /xg/0r/.betas/i/dias)"
#mes="$(date +%B)"
diafech="$(date +%e)"
timme="$(date +'%I:%M')"
#timme="$(date +'%I:%M'|toilet -f future)"
ye="$(date +%Y)"
######################################

#ipp="$(curl ifconfig.co)"  > /dev/null 2>&1
ip="$(ip route show|grep ' src ' |cut -d' ' -f9)"
ant3="$(ip route show|grep ' dev ' |cut -d' ' -f3)"
lika2="$(uname -o)"
mex="$(sh /data/data/com.termux/files/home/99/ban/mes)"
diax="$(sh /data/data/com.termux/files/home/99/ban/dias)"
c00l="$(sh /data/data/com.termux/files/home/99/ban/colorxx2)"

clx="$(sh /data/data/com.termux/files/home/99/ban/colorxx)"
cxx="$(sh /data/data/com.termux/files/home/99/ban/color22)"
echo -n "$c00l"
cat /data/data/com.termux/files/home/99/ban/b/noche-1
echo "$fin
  â•”$clx$diax$fin  
  â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£$diafech$fin
                      â•šâ•â•â•â•£ $ro2$mex$fin ğŸ”¹ $cy0$ye$fin
ğŸ“¡$ama$ant3$fin ğŸ”» ğŸ  $roj$ip$fin â•šâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
                                      
